{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
